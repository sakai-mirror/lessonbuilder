<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <name>Lessonbuilder DB DDL generator</name>
    <groupId>org.sakaiproject.lessonbuilder</groupId>
    <artifactId>lessonbuilder-ddl-generator</artifactId>
    <packaging>pom</packaging>

    <parent>
        <groupId>org.sakaiproject.lessonbuilder</groupId>
        <artifactId>lessonbuilder</artifactId>
        <version>1.5-SNAPSHOT</version>
    </parent>

    <properties>
        <!-- change this to reflect the name to use for the ddl files -->
        <project.ddl.name>lessonbuilder</project.ddl.name>
    </properties>

    <dependencies>

        <!-- pull in your hibernate persistent objects -->
        <dependency>
	  <groupId>org.sakaiproject.lessonbuilder</groupId>
	  <artifactId>lessonbuilder-hbm</artifactId>
        </dependency>
        <dependency>
	  <groupId>org.sakaiproject.lessonbuilder</groupId>
	  <artifactId>lessonbuilder-api</artifactId>
        </dependency>

    </dependencies>

    <build>
        <resources>
            <resource>
                <!-- this should pull in your hibernate template (.hbm.xml) files -->
                <directory>${basedir}</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
                <filtering>false</filtering>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <!-- hibernate ddl generation -->
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>hibernate3-maven-plugin</artifactId>
               <version>3.0</version>
                <configuration>
		  <hibernatetool destdir="${build.dir}/generated">
		    <configuration configurationfile="hibernate.cfg.xml"/>
		    <hbm2ddl export="false" outputfilename="sql.ddl"/>
		  </hibernatetool>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
